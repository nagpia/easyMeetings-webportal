<div class="page-header text-center">
	<h2>Sign up</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="container">
	<div class="col-sm-offset-4 col-sm-4">
		<div class="row">
			<div class="control-group">
				<%= f.label :email, :class => "control-label" %>
			</div>

			<div class="controls">
				<%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "form-control input-md" %>
			</div>
		</div>

		<div class="row">
			<div class="control-group">
				<%= f.label :password, :class => "control-label" %>
			</div>

			<div class="controls">
				<%= f.password_field :password, :placeholder => "Password", :class => "form-control input-md" %>
			</div>
		</div>

		<div class="row">
			<div class="control-group">
				<%= f.label :password_confirmation, :class => "control-label" %>
			</div>

			<div class="controls">
				<%= f.password_field :password_confirmation, :placeholder => "Confirm password", :class => "form-control input-md" %>
			</div>
		</div>

		<br />

		<div class="row">
			<%= f.submit "Sign up", :class =>  "btn btn-success"%>
		</div>
	</div>
</div>
<% end %>

